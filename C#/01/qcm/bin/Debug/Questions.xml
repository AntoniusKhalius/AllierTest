<?xml version="1.0"?> 
<questionnaire name="AppliQuestions" displayName="Questionnaire">
	<description>Questionnaire sur les gouts d'une personne</description>
	<question type="combo" name="Question sur les fruits">
		<text>Quel fruit est rond et de couleur orange ?</text>
		<reponses>
			<reponse default = 'false'>Pomme</reponse>
			<reponse default = 'false'>Banane</reponse>
			<reponse default = 'false'>Orange</reponse>
			<reponse default = 'false'>Kiwi</reponse>
		</reponses>	
	</question>
	<question type="combo" name="Question sur le ciel">
		<text>De quelle couleur est le ciel ?</text>
		<reponses>
			<reponse default = 'true'>Bleu</reponse>
			<reponse default = 'false'>Rouge</reponse>
			<reponse default = 'false'>Orange</reponse>
			<reponse default = 'false'>Jaune</reponse>
		</reponses>	
	</question>
	<question type="text" name="Question sur la musique">
		<text>Quel genre de musique aimez-vous ?</text>
		<defaultreponse></defaultreponse>
		<maxCharacters>75</maxCharacters>
	</question>
	<question type="liste" name="Question sur la soupe">
		<text>Quelles sont les soupes que vous aimez ?</text>
		<reponses>
			<reponse>Soupe de legumes</reponse>
			<reponse default="true">Soupe de tomate</reponse>
			<reponse>Soupe aux vermicelles</reponse>
			<reponse>Soupe aux champignons</reponse>
			<reponse>Soupe au riz</reponse>
		</reponses>		
	</question>
	<question type="radio" name="Question sur le sexe">
		<text>Quel est votre sexe ?</text>
		<reponses>
			<reponse default="true">Masculin</reponse>
			<reponse>Feminin</reponse>
		</reponses>	
	</question>
</questionnaire>
